<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/secondary_color"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayReservationActivity">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_margin="15dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="دفع تكلفة الحجز"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="أدخل بيانات بطاقتك وسيتم خصم تكلفة الحجز من رصيدك"/>
    <EditText
        android:id="@+id/txt_card_number"
        android:textColorHint="#373535"
        android:drawablePadding="5dp"
        android:hint="رقم البطاقة"
        android:drawableRight="@drawable/ic_baseline_credit_card_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txt_expiry_date"
        android:textColorHint="#373535"
        android:drawablePadding="5dp"
        android:hint="تاريخ انتهاء الصلاحية"
        android:inputType="date"
        android:drawableRight="@drawable/ic_baseline_today_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txt_cvv"
        android:inputType="number"
        android:textColorHint="#373535"
        android:drawablePadding="5dp"
        android:hint="CVV"
        android:drawableRight="@drawable/ic_baseline_numbers_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/btn_pay"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_back"
        android:text="دفع"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>








</androidx.appcompat.widget.LinearLayoutCompat>